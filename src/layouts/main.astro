---
import '@/globals.css';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/vinos-astro/favicon.svg" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-principalColor2 pb-2.5 flex flex-col min-h-screen">
		<slot />
	</body>
</html>
